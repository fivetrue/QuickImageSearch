<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorAlpha">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_fragment_image_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:gravity="right"
                android:orientation="vertical"
                android:background="@color/primaryColorAlpha">
                <TextView
                    android:id="@+id/tv_fragment_image_detail_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/tv_fragment_image_detail_site_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/tv_fragment_image_detail_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/tv_fragment_image_detail_page_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_fragment_image_detail_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="top|right"
                android:src="@drawable/selector_like"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>