<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_service_remote_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rouned_overlay_white"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_service_remote_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rouned_overlay_white"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_service_remote_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rouned_overlay_white"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_service_remote_image5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rouned_overlay_white"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="58dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <ImageView
            android:id="@+id/iv_service_remote_image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rouned_overlay_white"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/iv_service_remote_search"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:src="@drawable/ic_search_accent_24dp"
        android:background="@drawable/selector_common_background" />

</LinearLayout>