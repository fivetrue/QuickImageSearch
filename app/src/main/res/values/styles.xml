<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/default_enter_transition</item>
        <item name="android:windowExitTransition">@transition/default_exit_transition</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="android:itemTextAppearance">@style/ActionBarItemStyle</item>
        <item name="searchViewStyle">@style/ActionBarSearch</item>
    </style>

    <style name="ActionBarSearch" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_accent_24dp</item>
        <item name="searchHintIcon">@drawable/ic_search_20dp</item>
        <item name="defaultQueryHint">@string/search_hint</item>
        <item name="closeIcon">@drawable/ic_cancel_accent_24dp</item>
    </style>

    <style name="ActionBarItemStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
